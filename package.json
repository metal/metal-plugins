{
  "scripts": {
    "checkFormat": "npm run prettier -- --list-different",
    "compile": "lerna run compile",
    "format": "npm run prettier -- --write",
    "lerna": "lerna bootstrap -- --no-optional && npm install --no-optional",
    "lint": "eslint 'packages/*/{src,test}/**/*.js'",
    "saucelabs": "karma start karma-saucelabs.conf.js",
    "test": "karma start",
    "test:jest": "lerna run test:jest --concurrency 1 --stream",
    "test:saucelabs": "npm run saucelabs -- 3",
    "prettier": "prettier-eslint 'packages/*/{src,test}/**/*.js'"
  },
  "devDependencies": {
    "babel-core": "^6.26.0",
    "babel-loader": "^7.1.4",
    "babel-plugin-transform-node-env-inline": "^0.4.0",
    "babel-preset-env": "^1.6.1",
    "chai": "^4.1.2",
    "eslint": "^4.17.0",
    "eslint-config-liferay": "^2.0.18",
    "karma": "^1.1.0",
    "karma-babel-preprocessor": "^8.0.0-beta.0",
    "karma-chai-sinon": "^0.1.5",
    "karma-chrome-launcher": "^2.2.0",
    "karma-firefox-launcher": "^1.1.0",
    "karma-mocha": "^1.3.0",
    "karma-sauce-launcher": "~1.1.0",
    "karma-sinon": "^1.0.5",
    "karma-webpack": "^3.0.0",
    "lerna": "^2.11.0",
    "mocha": "^4.1.0",
    "prettier-eslint-cli": "^4.7.0",
    "sinon": "^4.5.0",
    "sinon-chai": "^3.0.0",
    "webpack": "^4.2.0"
  }
}
