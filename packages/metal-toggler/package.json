{
  "name": "metal-toggler",
  "version": "3.0.0",
  "description": "Metal's toggler component",
  "license": "BSD",
  "repository": "metal/metal-toggler",
  "engines": {
    "node": ">=0.12.0",
    "npm": ">=3.0.0"
  },
  "jsnext:main": "src/Toggler.js",
  "main": "lib/Toggler.js",
  "files": [
    "lib",
    "src",
    "test"
  ],
  "scripts": {
    "build": "webpack",
    "checkFormat": "npm run prettier -- --list-different",
    "compile": "babel --presets env -d lib/ src/",
    "format": "npm run prettier -- --write",
    "lint": "eslint '{src,test}/**/*.js'",
    "precommit": "lint-staged",
    "prepublish": "npm run compile",
    "prettier": "prettier-eslint '{src,test}/**/*.js'",
    "test": "karma start",
    "test:saucelabs": "karma start karma-saucelabs.conf.js"
  },
  "keywords": [
    "metal"
  ],
  "dependencies": {
    "bootstrap": "^3.3.6",
    "metal": "^2.0.0",
    "metal-dom": "^2.0.0",
    "metal-events": "^2.0.0",
    "metal-state": "^2.0.0"
  },
  "devDependencies": {
    "babel-cli": "^6.4.5",
    "babel-loader": "^7.1.2",
    "babel-plugin-transform-node-env-inline": "^0.2.0",
    "babel-preset-env": "^1.6.1",
    "chai": "^4.1.2",
    "css-loader": "^0.28.7",
    "eslint": "^4.12.0",
    "eslint-config-liferay": "^2.0.17",
    "extract-text-webpack-plugin": "^3.0.0",
    "karma": "^1.1.0",
    "karma-chai": "^0.1.0",
    "karma-chrome-launcher": "^2.2.0",
    "karma-mocha": "^1.3.0",
    "karma-sauce-launcher": "~1.1.0",
    "karma-sinon": "^1.0.5",
    "karma-webpack": "^2.0.6",
    "lint-staged": "^5.0.0",
    "metal-tools-soy": "^4.2.6",
    "mocha": "^4.0.1",
    "node-sass": "^4.5.3",
    "prettier-eslint-cli": "^4.4.0",
    "sass-loader": "^6.0.6",
    "sinon": "^4.1.2",
    "style-loader": "^0.18.2",
    "webpack": "^3.5.5"
  },
  "lint-staged": {
    "*.js": [
      "npm run format",
      "git add"
    ]
  }
}
