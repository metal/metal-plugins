{
	"env": {
		"browser": true,
		"es6": true,
		"jest": true,
		"node": true
	},
	"globals": {
		"chrome": true
	},
	"parserOptions": {
		"ecmaVersion": 7,
		"sourceType": "module",
		"ecmaFeatures": {
			"jsx": true,
			"experimentalObjectRestSpread": true
		}
	},
	"plugins": ["prettier", "react"],
	"rules": {
		"prettier/prettier": [
			"error",
			{
				"bracketSpacing": false,
				"singleQuote": true,
				"trailingComma": "none",
				"useTabs": true
			}
		],
		"semi": 1,
		"no-bitwise": 0,
		"curly": 2,
		"eqeqeq": 2,
		"no-eval": 0,
		"guard-for-in": 0,
		"wrap-iife": [2, "any"],
		"max-depth": 0,
		"no-multi-str": 0,
		"no-caller": 2,
		"quotes": [
			1,
			"single",
			{"allowTemplateLiterals": true}
		],
		"no-undef": 2,
		"no-unused-vars": 2,
		"react/jsx-uses-vars": [2]
	}
}
